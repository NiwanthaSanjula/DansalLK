<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="දන්සල එකතු කිරීම"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="දන්සල නම" />

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ස්ථානය"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="දිනය (YYYY-MM-DD)"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/etStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ආරම්භ වේලාව (HH:mm)"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/etEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="අවසන් වේලාව (HH:mm)"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="විස්තරය"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginTop="10dp" />


        <LinearLayout
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <!-- GPS Location Button -->
            <Button
                android:id="@+id/btnUseGPS"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:text="GPS නගන්න"
                android:layout_margin="8dp" />

            <!-- Upload Image Button -->
            <Button
                android:id="@+id/btnChooseImage"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:text="ඡායාරූප තෝරන්න"
                android:layout_margin="8dp" />
        </LinearLayout>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="තෝරාගත් ඡායාරූප"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/imagePreviewContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp" />
        </HorizontalScrollView>


        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="දන්සල එකතු කරන්න"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFA500"
            android:textColor="#000" />
    </LinearLayout>
</ScrollView>
