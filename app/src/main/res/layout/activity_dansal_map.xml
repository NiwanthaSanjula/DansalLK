<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Google Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay Buttons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:backgroundTint="#FFA500"
            android:background="@drawable/back_button_bg"
            android:src="@drawable/back"
            android:scaleType="centerInside" />

        <!-- Current Location Button -->
        <ImageButton
            android:id="@+id/btnMyLocation"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="108dp"
            android:background="@drawable/back_button_bg"
            android:contentDescription="Current Location"
            android:scaleType="centerInside"
            android:src="@drawable/ic_my_location" />

        <!-- Map Type Button -->
        <ImageButton
            android:id="@+id/btnMapType"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignStart="@id/btnMyLocation"
            android:layout_above="@id/btnMyLocation"
            android:layout_marginBottom="16dp"
            android:background="@drawable/back_button_bg"
            android:src="@drawable/layerbtn"
            android:scaleType="centerInside"/>

        <!-- Bottom Panel -->
        <LinearLayout
            android:id="@+id/bottomPanel"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_alignParentBottom="true"
            android:background="#FFA500"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btnFilter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="පෙරහන් (Filter)"
                android:textColor="#000"
                android:textStyle="bold" />

            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnAddDansala"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#fff"
                android:text="එකතු කරන්න"
                android:textColor="#000"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
