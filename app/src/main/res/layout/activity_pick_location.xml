<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!-- Current Location Button (Bottom Left, 108dp from bottom) -->
    <ImageButton
        android:id="@+id/btnMyLocation"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/back_button_bg"
        android:contentDescription="Current Location"
        android:scaleType="centerInside"
        android:src="@drawable/ic_my_location" />

    <!-- Map Type Button (Above MyLocation, 16dp gap) -->
    <ImageButton
        android:id="@+id/btnMapType"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignStart="@id/btnMyLocation"
        android:layout_above="@id/btnMyLocation"
        android:layout_marginBottom="16dp"
        android:background="@drawable/back_button_bg"
        android:src="@drawable/layerbtn"
        android:scaleType="centerInside"/>

    <Button
        android:id="@+id/btnConfirmLocation"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Confirm Location"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:backgroundTint="#FFA500"
        android:textColor="#FFF" />
</RelativeLayout>
