<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/main">


    <!-- Lantern 1 (smaller size) -->
    <ImageView
        android:id="@+id/lantern1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/lantern1"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:translationX="-50dp" />

    <!-- Lantern 2 (smaller size) -->
    <ImageView
        android:id="@+id/lantern2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/lantern2"
        android:layout_alignTop="@id/lantern1"
        android:layout_centerHorizontal="true"
        android:translationX="50dp" />

    <!-- Text Logo below lanterns -->
    <ImageView
        android:id="@+id/splashTextLogo"
        android:layout_width="333dp"
        android:layout_height="181dp"
        android:layout_below="@id/lantern1"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/dansallogo"/>

</RelativeLayout>
