<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top bar with category label and X mark -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvLabelCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:textStyle="bold"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnClosePopup"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end|top"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
            android:contentDescription="Close"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Category value here"/>

    <TextView
        android:id="@+id/tvLabelDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description value here"/>

    <TextView
        android:id="@+id/tvLabelDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date value here"/>

    <TextView
        android:id="@+id/tvLabelStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Time:"
        android:textStyle="bold"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Time value here"/>

    <TextView
        android:id="@+id/tvLabelNoImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Images:"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvNoImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No images"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvImages"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"/>
</LinearLayout>
